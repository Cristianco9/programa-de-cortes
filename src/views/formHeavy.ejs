<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear anjeo pesado</title>
    <meta name="description" content="Crear anjeo pesado">
    <link rel="stylesheet" href="/styles/formHeavy.css">
    <meta name="robots" content="index,follow">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Readex+Pro:wght@700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="mainContainer">
        <section class="appBox">
            <section class="header">
                <div class="orderInfo">
                    <table class="orderTable">
                        <thead>
                            <tr>
                                <th class="orderTitle">Pedido</th>
                            </tr>
                        </thead>
                        <tbody>
                                <tr>
                                    <td class="orderID"><%= currentOrder %></td>
                                </tr>
                        </tbody>
                    </table>
                </div>
                <h2 class="anjeoType">Crear anjeo pesado</h2>
            </section>
            <form class="form" action="/api/v1/orderActions/type/formHeavy/CreateFormHeavy" method="POST">
                <div class="fieldContainer">
                    <h3 class="fieldName">Seleccionar color</h3>
                    <select class="input" name="color" id="color" required>
                      <option value="" disabled selected>Color</option>
                      <option value="Analog">Anolog</option>
                      <option value="Blanco">Blanco</option>
                      <option value="Champa침a">Champa침a</option>
                      <option value="Natural">Natural</option>
                      <option value="Negro">Negro</option>
                    </select>
                </div>
                <div class="fieldContainer">
                    <h3 class="fieldName">Seleccionar perfil</h3>
                    <select class="input" name="perfil" id="perfil" required>
                      <option value="" disabled selected>Perfil</option>
                      <option value="Cuatro naves">Cuatro naves</option>
                      <option value="Doble">Doble</option>
                      <option value="Sencillo">Sencillo</option>
                      <option value="Tres naves">Tres naves</option>
                    </select>
                </div>
                <div class="fieldContainer">
                    <h3 class="fieldName">Seleccionar tipo de apertura</h3>
                    <select class="input" name="apertura" id="apertura" required>
                      <option value="" disabled selected>Apertura</option>
                      <option value="Fijo">Fijo</option>
                      <option value="Lateral">Lateral</option>
                      <option value="Uno hala otro">Uno hala otro</option>
                    </select>
                </div>
                <div class="fieldContainer">
                    <h3 class="fieldName">Lugar</h3>
                    <input class="input" name="lugar" id="lugar" type="text" required>
                </div>
                <div class="fieldContainer">
                    <h3 class="fieldName">Ancho</h3>
                    <input class="input" name="ancho" id="ancho" type="number" required>
                </div>
                <div class="fieldContainer">
                    <h3 class="fieldName">Altura</h3>
                    <input class="input" name="altura" id="altura" type="number" required>
                </div>
                <div class="fieldContainer">
                    <h3 class="fieldName">Cabezal</h3>
                    <input class="input" name="cabezal" id="cabezal" type="number" required>
                </div>
                <div class="fieldContainer">
                    <h3 class="fieldName">Adaptador</h3>
                    <input class="input" name="adaptador" id="adaptador" type="number" required>
                </div>
                <div class="fieldContainer">
                    <h3 class="fieldName">Perfil superior</h3>
                    <input class="input" name="perfilSuperior" id="perfilSuperior" type="number" required>
                </div>
                <div class="fieldContainer">
                    <h3 class="fieldName">Instalaci칩n</h3>
                    <select class="input" name="instalacion" id="instalacion" required>
                      <option value="" disabled selected>Instalaci칩n</option>
                      <option value="Externa">Externa</option>
                      <option value="Interna">Interna</option>
                    </select>
                </div>
                <div class="fieldContainer">
                    <h3 class="fieldName">Altura divisor</h3>
                    <input class="input" name="alturaDivisor" id="alturaDivisor" type="number" required>
                </div>
                <div class="fieldContainer">
                    <h3 class="fieldName">Tipo de manija</h3>
                    <select class="input" name="manija" id="manija" required>
                      <option value="" disabled selected>manija</option>
                      <option value="Cubeta anjeo">Cubeta anjeo</option>
                      <option value="Ducha">Ducha</option>
                    </select>
                </div>
                <div class="fieldContainer">
                    <h3 class="fieldName">Lado de apertura</h3>
                    <select class="input" name="lado" id="lado" required>
                      <option value="" disabled selected>lado</option>
                      <option value="Derecha">Derecha</option>
                      <option value="Fija">Fija</option>
                      <option value="Izquierda">Izquierda</option>
                    </select>
                </div>
                <div class="fieldContainer">
                    <h3 class="fieldName">Notas</h3>
                    <input class="input" name="notas" id="notas" type="text">
                </div>
                <section class="bottonContainer">
                    <button class="botton" data-path="/api/v1/orderActions/type" onclick="redirect(this)">Regresar</button>
                    <button type="submit" class="botton">Siguiente</button>
                </section>
            </form>
        </section>
    </div>
    <script type="application/javascript" src="/js/redirectView.js"></script>
</body>
</html>
